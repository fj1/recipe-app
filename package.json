{
  "name": "recipe-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^15.6.1",
    "react-apollo": "^1.4.15",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.11",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "scripts": {
    "start": "NODE_PATH=./src react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "dev-server": "json-server -p 5000 recipes.json",
    "format": "prettier --trailing-comma all --no-semi --single-quote --write \"src/**/*.js\"",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "enzyme": "^2.9.1",
    "eslint": "^4.7.0",
    "husky": "^0.14.3",
    "json-server": "^0.12.0",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0",
    "react-test-renderer": "^15.6.1",
    "redux-devtools-extension": "^2.13.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --trailing-comma all --no-semi --single-quote --write",
      "git add"
    ]
  }
}
